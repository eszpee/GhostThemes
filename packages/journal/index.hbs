        const data = await fetchLatestPosts('https://www.the-retrospective.com/rss/');
        
        if (data && data.items && data.items.length > 0) {
            const firstItem = data.items.shift();
            const firstHTML = `
                        <div class="gh-podcast-first-item">
                            <a class="gh-topic-item" href="${firstItem.link}">
                                <h3 class="gh-topic-name">${firstItem.title}</h3>
                                <p class="gh-podcast-featured">${firstItem.description.replace(/<[^>]*>/g, '').split('.')[0]}.</p>
