{{!< default}}

<main id="gh-main" class="gh-main gh-outer">
    <div class="gh-inner">
        <div class="gh-wrapper">
            <section class="gh-section">
                <!-- Keep the intro from the new design -->
                <article class="gh-intro">
                    <figure class="gh-intro-image">
                        <img src="{{asset "peter-szasz.jpg"}}" alt="Péter Szász" />
                    </figure>
                    <p>
                        <b>Hi, I'm Péter</b><br/><i>(Or as some might know me, eszpee.)</i> 
                    </p>
                    <p>I help engineers become confident leaders.</p>
                    <p>After a quarter of a century in various engineering roles from developer to director, I've learned that technical expertise is one of the least important indicator for success in management. The hard part is figuring out what matters, building a high-performing team, and supporting the personal development of its members.</p>

                    <p>I offer practical, experience-based mentorship that focuses on the realities of engineering management. </p><p><a href="/about/">Check out more about me</a>, or find my articles below.</p>

                </article>

                <!-- Engineering Leadership articles block -->
                <div class="gh-content-block leadership-block">
                    <h2 class="gh-block-title">Leadership</h2>
                    <div class="gh-article-list">
                        {{#get "posts" filter="tag:engineering-leadership-challenges" limit="all" include="title,url,excerpt,featured,published_at,feature_image" order="published_at desc"}}
                            {{#foreach posts}}
                                {{#if @first}}
                                    <div class="gh-article-featured">
                                        <div class="gh-featured-article-container">
                                            {{#if feature_image}}
                                                <a href="{{url}}" class="gh-featured-image-link">
                                                    <figure class="gh-featured-image">
                                                        <img
                                                            srcset="{{img_url feature_image size="s"}} 300w"
                                                            src="{{img_url feature_image size="s"}}"
                                                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                                        >
                                                    </figure>
                                                </a>
                                            {{/if}}
                                            <div class="gh-featured-content">
                                                <p class="gh-postlist-item">
                                                    <a class="gh-postlist-title" href="{{url}}">{{title}}</a>
                                                </p>
                                                <p class="gh-article-excerpt">{{excerpt}}</p>
                                            </div>
                                        </div>
                                    </div>
                                {{else}}
                                    <p class="gh-postlist-item">
                                        <a class="gh-postlist-title" href="{{url}}">
                                            {{#if featured}}<span class="gh-postlist-star">⭐</span>{{/if}}
                                            {{title}}
                                        </a>
                                    </p>
                                {{/if}}
                            {{/foreach}}
                        {{/get}}
                    </div>
                </div>

                <!-- IC2EM articles block -->
                <div class="gh-content-block ic2em-block">
                    <h2 class="gh-block-title">From Engineer to Manager</h2>
                    <div class="gh-article-list">
                        {{#get "posts" filter="tag:ic-to-em" limit="all" include="title,url,excerpt,featured,published_at,feature_image" order="published_at desc"}}
                            {{#foreach posts}}
                                {{#if @first}}
                                    <div class="gh-article-featured">
                                        <div class="gh-featured-article-container">
                                            {{#if feature_image}}
                                                <a href="{{url}}" class="gh-featured-image-link">
                                                    <figure class="gh-featured-image">
                                                        <img
                                                            srcset="{{img_url feature_image size="s"}} 300w"
                                                            src="{{img_url feature_image size="s"}}"
                                                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                                        >
                                                    </figure>
                                                </a>
                                            {{/if}}
                                            <div class="gh-featured-content">
                                                <p class="gh-postlist-item">
                                                    <a class="gh-postlist-title" href="{{url}}">{{title}}</a>
                                                </p>
                                                <p class="gh-article-excerpt">{{excerpt}}</p>
                                            </div>
                                        </div>
                                    </div>
                                {{else}}
                                    <p class="gh-postlist-item">
                                        {{#if featured}}<span class="gh-postlist-star">⭐</span>{{/if}}
                                        <a class="gh-postlist-title" href="{{url}}">{{title}}</a>
                                    </p>
                                {{/if}}
                            {{/foreach}}
                        {{/get}}
                    </div>
                </div>

                <!-- Substack block -->
                <div class="gh-content-block substack-block">
                    <h2 class="gh-block-title">Engineering Manager Challenges</h2>
                    <div class="gh-article-list">
                        <!-- Dynamic posts from Substack -->
<script>
document.addEventListener('DOMContentLoaded', async function() {
    try {
        const data = await fetchLatestPosts('https://leadtime.substack.com/feed');
        
        if (data && data.items && data.items.length > 0) {
            const firstItem = data.items.shift();
            const firstHTML = `
                        <div class="gh-article-featured">
                            <div class="gh-featured-article-container">
                                <div class="gh-featured-content">
                                    <p class="gh-postlist-item">
                                        <a class="gh-postlist-title" href="${firstItem.link}">${firstItem.title}</a>
                                    </p>
                                </div>
                            </div>
                            <div class="gh-article-excerpt-container">
                                <p class="gh-article-excerpt">${firstItem.description}</p>
                            </div>
                        </div>
            `;

            const postsHTML = data.items.map(item => {
                return `
                            <p class="gh-postlist-item">
                                <a class="gh-postlist-title" href="${item.link}">${item.title}</a>
                            </p>
                `;
            }).join('');

            // Update HTML with the latest posts details
            document.getElementById('latest-posts').insertAdjacentHTML('afterbegin', firstHTML + postsHTML);
        }
    } catch (error) {
        console.error('Error loading Substack posts:', error);
    }
});
</script>

                        <div id="latest-posts">
                            <p class="gh-postlist-item">
                                <a class="gh-postlist-title topics-all" href="https://leadtime.substack.com/">See all {{> "icons/arrow-right"}}</a>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Other writing block -->
                <div class="gh-content-block other-writing-block">
                    <h2 class="gh-block-title">Everything Else</h2>
                    <div class="gh-article-list">
                        {{#get "posts" filter="tag:-newsletter+tag:-ic-to-em+tag:-engineering-leadership-challenges" limit="all" include="title,url,excerpt,featured,published_at,feature_image" order="published_at desc"}}
                            {{#foreach posts}}
                                {{#if @first}}
                                    <div class="gh-article-featured">
                                        <div class="gh-featured-article-container">
                                            {{#if feature_image}}
                                                <a href="{{url}}" class="gh-featured-image-link">
                                                    <figure class="gh-featured-image">
                                                        <img
                                                            srcset="{{img_url feature_image size="s"}} 300w"
                                                            src="{{img_url feature_image size="s"}}"
                                                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                                        >
                                                    </figure>
                                                </a>
                                            {{/if}}
                                            <div class="gh-featured-content">
                                                <p class="gh-postlist-item">
                                                    <a class="gh-postlist-title" href="{{url}}">{{title}}</a>
                                                </p>
                                                <p class="gh-article-excerpt">{{excerpt}}</p>
                                            </div>
                                        </div>
                                    </div>
                                {{else}}
                                    <p class="gh-postlist-item">
                                        {{#if featured}}<span class="gh-postlist-star">⭐</span>{{/if}}
                                        <a class="gh-postlist-title" href="{{url}}">{{title}}</a>
                                    </p>
                                {{/if}}
                            {{/foreach}}
                        {{/get}}
                    </div>
                </div>
            </section>

            <!-- Sidebar with updated content -->
            <aside class="gh-sidebar">
                <section class="gh-section">
                    <h2 class="gh-section-title">About</h2>

                    <div class="gh-about">
                        {{#if @site.icon}}
                            <img class="gh-about-icon" src="{{@site.icon}}" alt="{{@site.title}}">
                        {{/if}}

                        <section class="gh-about-wrapper">
                            <h3 class="gh-about-title">{{@site.title}}</h3>

                            <p class="gh-about-description">Helping Engineers become (better) Managers</p>
                        </section>
                    </div>

                    {{#if @site.members_enabled}}
                        {{^if @member.paid}}
                            <div class="gh-signup">
                                {{^if @member}}
                                    <p class="gh-signup-description">Sign up here to receive my newsletter.</p>

                                    <a class="gh-subscribe-input" href="#/portal/signup" data-portal="signup">
                                        <div class="gh-subscribe-input-text">
                                            {{> icons/email}}
                                            jamie@example.com
                                        </div>
                                        <div class="gh-subscribe-input-btn">Subscribe</div>
                                    </a>
                                {{else}}
                                    {{#if @setting.paid_members_enabled}}
                                        <p class="gh-signup-description">Upgrade to a paid account to get full access.</p>
                                        <a class="gh-signup-btn gh-btn gh-primary-btn" href="#/portal/account/plans" data-portal="account/plans">Upgrade now</a>
                                    {{/if}}
                                {{/if}}
                            </div>
                        {{/if}}
                    {{/if}}
                </section>

                {{#get "posts" filter="primary_tag:newsletter" limit="10" as |newsletter|}}
                    {{#if newsletter}}
                        <section class="gh-section">
                            <h3 class="gh-section-title">Blog</h3>

                            <div class="gh-featured gh-feed">
                                {{#foreach newsletter}}
                                    {{#if @first}}
                                        <div class="gh-blog-first-item">
                                            <a class="gh-topic-item" href="{{url}}">
                                                <h3 class="gh-topic-name">{{title}}</h3>
                                            </a>
                                            {{#if feature_image}}
                                                <a href="{{url}}" class="gh-topic-image-link">
                                                    <figure class="gh-article-image">
                                                        <img
                                                            srcset="{{img_url feature_image size="s"}} 300w,
                                                                {{img_url feature_image size="m"}} 720w,
                                                                {{img_url feature_image size="l"}} 960w"
                                                            sizes="(max-width: 1200px) 100vw, 720px"
                                                            src="{{img_url feature_image size="m"}}"
                                                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                                        >
                                                    </figure>
                                                </a>
                                            {{/if}}
                                        </div>
                                    {{else}}
                                        <a class="gh-topic-item" href="{{url}}">
                                            <h3 class="gh-topic-name">{{title}}</h3>
                                        </a>
                                    {{/if}}
                                {{/foreach}}
                                <a class="topics-all" href="/tag/newsletter/">See all {{> "icons/arrow-right"}}</a>
                            </div>
                        </section>
                    {{/if}}
                {{/get}}

                <!-- Podcast section -->
                <section class="gh-section">
                    <h3 class="gh-section-title">Podcast</h3>

                    <div class="gh-podcast" id="podcast-posts">

                        <!-- Dynamic posts from The Retrospective -->
<script>
